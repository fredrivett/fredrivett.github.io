<% wrap_layout :layout do %>

  <nav class="c_main-nav">
    <a href="/" class="c_main-nav__logo">FR</a>
  </nav>

  <div class="o_spacer o_spacer--large">
    <div class="container">
      <div class="nine columns centered">
        <article class="t_emphasise">
          <header class="c_article-head">
            <h1 class="c_article-head__title"><%= current_article.title unless current_article.title.nil? %></h1>
            <time class="c_article-head__date" datetime="<%= current_article.date.strftime('%Y-%m-%dT%l:%M:%S%z') unless current_article.date.nil? %>">
              <%= current_article.date.strftime('%b %e \'%y') unless current_article.date.nil? %>
            </time>
          </header>

          <%= yield %>
        </article>
      </div>
    </div>
  </div>

<% end %>
