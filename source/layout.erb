<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="author" content="Fred Rivett">
    <meta name="description" content="<%= current_article ? strip_tags(current_article.summary(140)) : 'You know, one of those maker types.' %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="google-site-verification" content="Ax_bVoffeEdH54o5t3btWHOS6zjgIPWNjn3igVb3Jp8" />

    <title><%= current_article.title.downcase.titleize + ' | ' if current_article %>fredrivett</title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <link rel="stylesheet" type="text/css" href="/css/app.css" />
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700|Roboto+Mono:300,300i,700" rel="stylesheet">

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#ffffff">

    <%= '<link href="' + current_article.data.canonical + '" rel="canonical">' if current_article && current_article.data.canonical  %>

    <% if current_article %>
      <meta name="twitter:card" content="summary" />
      <meta name="twitter:site" content="@fredrivett" />
      <meta name="twitter:title" content="<%= current_article.title %>" />
      <meta name="twitter:description" content="<%= strip_tags(current_article.summary(140)) %>" />
    <% end %>

    <script src="/js/vendor/modernizr-2.8.3.js" type="text/javascript"></script>

  </head>
  <body>

    <%= yield %>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-48198922-4', 'auto');
      ga('send', 'pageview');
    </script>

  </body>
</html>
